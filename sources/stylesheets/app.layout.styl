body
  font-size: 14px
  line-height: 1.4em
  font-family: "Helvetica Neue"

  display-box()
  box-pack(justify)
  overflow: hidden

  & *
    box-sizing(border-box)

  & > *
    display-box()
    box-orient(vertical)
    height: 100%

  & > aside
    box-flex(0)
    width: 0
    overflow: hidden
    transition: all 300ms
    &.active
      width: ASIDE_WIDTH

    & > header, > footer
      padding: 0 1em
    & nav
      box-flex(1)

  & > section
    box-flex(1)
    margin-left: 0.15em
    transition opacity 300ms
    &:not(.active)
      opacity: 0.6
    & > header
      & button
        float: left
        margin: 0.6em

    & > article
      box-flex(1)
      padding: 1em
      font-family: "Courier New"
      font-size: 14px
      font-weight: bold

    & > footer
      font-size: FONT_TINY

  & header
    height: HEADER_HEIGHT
    line-height: HEADER_HEIGHT

  & footer
    height: SIZE = (HEADER_HEIGHT / 1.3)
    line-height: SIZE
    padding: 0 1em

  & button
    display: inline-block
    border: none
    cursor: pointer
    font-family: inherit
    font-weight: inherit
    font-size: inherit
    text-align: center
    text-decoration: none
    outline: none
    background: none
    font-weight: bold
    transition background-color 300ms

  section header &
    margin-bottom: 1em
    height: HEADER_HEIGHT
    line-height: HEADER_HEIGHT

