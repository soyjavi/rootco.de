body
  font-size: 13px
  line-height: 1.4em
  font-family: "Helvetica Neue"

  display-box()
  box-pack(justify)
  overflow: hidden

  & *
    box-sizing(border-box)

  & > *
    display-box()
    box-orient(vertical)
    height: 100%

  & > aside
    box-flex(0)


  & > section
    box-flex(1)

  & > *
    & > header
      height: HEADER_HEIGHT
      line-height: HEADER_HEIGHT

    & > footer
      height: SIZE = (HEADER_HEIGHT / 1.3)
      line-height: SIZE
      padding: 0 1em

  & button
    display: inline-block
    border: none
    cursor: pointer
    font-family: inherit
    font-weight: inherit
    font-size: inherit
    text-align: center
    text-decoration: none
    outline: none
    background: none
    font-weight: bold
    transition background-color 300ms
